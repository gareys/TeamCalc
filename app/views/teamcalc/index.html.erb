<div class="page-header">
	<h1>Input Data</h1>
</div>
<div class="col-md-4">
	<%= form_tag("/teamcalc/solution") do%>
		<form role="form">
			<div class="form-group">
				<%= label_tag(:num_students, "Number of Students") %>
				<%= number_field_tag :num_students, nil, class: "form-control", autofocus: true %>
			</div>
			<div class="form-group">
				<%= label_tag(:num_teams, "Number of Teams") %>
				<%= number_field_tag :num_teams, nil, class: "form-control", autofocus: true %>
			</div>
			<%= submit_tag "Make me some teams!", class: "btn btn-success" %>
		</form>
	<% end %>
</div>